{
  "$schema": "https://go.kicad.org/api/schemas/v1",
  "identifier": "com.kicad.library.manager",
  "name": "KiCad Library Manager",
  "description": "GUI for managing a KiCad parts library repository",
  "runtime": {
    "type": "python",
    "min_version": "3.10"
  },
  "actions": [
    {
      "identifier": "open",
      "name": "KiCad Library Manager",
      "description": "Open the library manager window",
      "show-button": true,
      "scopes": [
        "pcb"
      ],
      "entrypoint": "run_library_manager.py",
      "icons-light": [
        "library_manager/logo.png"
      ]
    }
  ]
}

